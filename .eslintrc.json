{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "arrow-body-style": "off",
    "semi": ["error", "always"],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "import/extensions": [
      1,
      {
        "js": "always",
        "json": "always"
      }
    ],
    "eslint-disable-next-line react/no-array-index-key": "off",
    "import/no-unresolved": "off",
    "no-unused-vars": "warn",
    "indent": "off",
    "eslint-plugin-import/newline-after-import": "off",
    "spaced-comment": "off",
    "no-unused-expressions": "off",
    "max-len": "off",
    "no-multiple-empty-lines": "off",
    "arrow-parens": "off",
    "import/prefer-default-export": "off",
    "no-multi-spaces": "off",
    "jsx-a11y/control-has-associated-label": "off",
    "no-trailing-spaces": "off",
    "react/jsx-closing-tag-location": "off",
    "quotes": "off",
    "react/jsx-one-expression-per-line": "off",

    // NEW INDENTATION SETTINGS
    "react/jsx-indent": ["error", 2], // Enforces 2 spaces indentation for JSX
    "react/jsx-indent-props": ["error", "first"] // Align props with the first prop (you can use "multiline" if you prefer)

    // Disable prop indentation rule (if you want no rules on prop indentation)
    // "react/jsx-indent-props": "off"
  }
}
